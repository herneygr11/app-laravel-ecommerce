body
    background-color #f6f6f6
    margin: 0px;

.box 
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position absolute
    padding 16px
    width 500px
    .btn-success
        background-color #F83009
        border 0
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none

.box_login
    left calc(50% - 250px)
    top calc(50% - 121px)